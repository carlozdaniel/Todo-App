<div class="small-container center-block">
<p id="notice"><%= notice %></p>

<h1>Lista</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Titulo</th>
      <th scope="col">Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td scope="row"><%= list.title %></td>
        <td scope="row"><%= list.color %></td>
        <td scope="row"><%= link_to 'Ver', list %></td>
        <td scope="row"><%= link_to 'Editar', edit_list_path(list) %></td>
       <!-- <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva lista', new_list_path, class: "btn btn-primary"%>
